<Window x:Class="T7a.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T7a"
        mc:Ignorable="d"
        Title="MainWindow" Height="490" Width="654">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <StackPanel Margin="10,68,0,0" HorizontalAlignment="Left" Width="108" Height="325" VerticalAlignment="Top">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFC7C7C7" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <RadioButton Content="RUB" Checked="RadioButton_Checked_1" Foreground="White" FontSize="24"/>
            <RadioButton Content="USD" Checked="RadioButton_Checked_2" Foreground="White" FontSize="24"/>
            <RadioButton Content="EUR" Checked="RadioButton_Checked_3" Foreground="White" FontSize="24"/>
            <RadioButton Content="UAN" Checked="RadioButton_Checked_4" Foreground="White" FontSize="24"/>
        </StackPanel>
        <TextBox x:Name="TextInp" HorizontalAlignment="Left" Margin="123,68,0,0" TextWrapping="Wrap" Text="7500" VerticalAlignment="Top" Width="467" Height="44" FontSize="30"/>
        <TextBlock x:Name="AnswBlock" HorizontalAlignment="Left" Margin="123,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="271" Width="467" Foreground="White">
            <TextBlock.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFC7C7C7" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Background>
        </TextBlock>
        <Label Content="Money-Change-Converter" HorizontalAlignment="Left" Margin="149,10,0,0" VerticalAlignment="Top" Foreground="White" FontStyle="Italic" FontWeight="Bold" FontSize="24"/>
        <Label x:Name="CountOfChecks" Content="Money-Change-Converter" HorizontalAlignment="Left" Margin="10,398,0,0" VerticalAlignment="Top" Foreground="Black" FontStyle="Italic" FontWeight="Bold" FontSize="24" Background="Transparent" Width="580"/>

    </Grid>
</Window>
